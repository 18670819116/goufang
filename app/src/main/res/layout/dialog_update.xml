<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:background="@color/transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginRight="@dimen/x32"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/shape_bg_20"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/x360"
                android:layout_height="@dimen/y360"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_update"/>


            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y15"
                android:text="发现最新版本：V1.1.1"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                />



                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y200"
                        android:layout_marginLeft="@dimen/x40"
                        android:layout_marginRight="@dimen/x40"
                        android:layout_marginTop="@dimen/y15"
                        android:scrollbars="vertical"
                        android:textColor="@color/color_939393"
                        android:text="1.修复app的一些bug\n1.修复app的一些bug\n1.修复app的一些bug\n1.修复app的一些b修复app的一些bug\n1.修复app的一些"
                        />



            <LinearLayout
                android:layout_width="@dimen/x320"
                android:layout_height="@dimen/y80"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="@dimen/x320"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/shape_dialog_btn1"
                    android:text="立即更新"
                    android:textColor="@color/white"
                    />

                <com.vondear.rxui.view.RxProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y70"
                    android:visibility="gone"
                    app:finishColor="#40c4ff"
                    app:loadingColor="#40c4ff"
                    app:radius="@dimen/x35"
                    app:stopColor="#ff9800"
                    app:textSize="14sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/y65"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_caca"/>
    </RelativeLayout>

</RelativeLayout>