<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banquan"
        android:layout_marginBottom="@dimen/y30"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y130"
                android:layout_marginTop="@dimen/y40"
                android:src="@mipmap/ic_about_our"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="悦居星城"
                android:textColor="@color/main_color"
                android:textSize="20sp"/>

            <View
                style="@style/line_hor"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y30"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/y15"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:text="悦居星城APP由长沙市住房和城乡建设委员会主导开发,旨在为购房者提供实名认证、购房资格审查等服务,
购房资格审查结果可直接在购房过程中使用，以节省您在购房资格审查中花费的时间和精力。
悦居星城APP中的实名认证及购房资格审查结果由长沙市住房和城乡建设委员会提供，与您在政府窗口办理的资格审查结果具有同等的有效性。"
                android:textColor="@color/color_333333"
                />


            <TextView

                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y30"
                android:text="长沙市住房和城乡建设委员会"
                android:textColor="@color/color_999999"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y15"
                android:text="地址：岳麓大道218号市政府二办公楼10楼"
                android:textColor="@color/color_999999"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y15"
                android:text="电话：0731-88665911"
                android:textColor="@color/color_999999"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y15"
                android:text="传真：0731-88665908"
                android:textColor="@color/color_999999"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:paddingTop="@dimen/y15"
                android:text="邮政编码：410013"
                android:textColor="@color/color_999999"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/banquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y30"
        android:gravity="center"
        android:text="长沙市住建委信息中心拥有软件最终解释权\n技术支持：湖南创欣物联科技有限公司"
        android:textSize="12sp"/>
</RelativeLayout>