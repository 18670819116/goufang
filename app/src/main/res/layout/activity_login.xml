<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bg">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x113"
        android:layout_marginTop="@dimen/y61"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_gravity="center"
            android:src="@mipmap/ic_phone"
            />

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y108"
            android:layout_marginLeft="@dimen/x55"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_939393"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        style="@style/line_hor"
        android:layout_marginLeft="@dimen/x68"
        android:layout_marginRight="@dimen/x68"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x113"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_gravity="center"
            android:src="@mipmap/ic_pwd"
            />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/y108"
            android:layout_marginLeft="@dimen/x55"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_939393"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/iv_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x68"
            android:background="@drawable/selector_pwd_eye"
            android:button="@null"
            android:src="@mipmap/eye_off"
            />
    </LinearLayout>

    <View
        style="@style/line_hor"
        android:layout_marginLeft="@dimen/x68"
        android:layout_marginRight="@dimen/x68"/>

    <Button
        android:id="@+id/btn_login"
        style="@style/btn_login"

        android:layout_marginTop="@dimen/y61"
        android:text="登 录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x68"
        android:layout_marginRight="@dimen/x68"
        android:layout_marginTop="@dimen/y24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"

            android:textColor="@color/color_0f77ff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/color_333333"/>
    </LinearLayout>
</LinearLayout>
