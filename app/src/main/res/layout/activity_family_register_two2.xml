<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y42"
                    android:layout_marginTop="@dimen/y40"
                    android:src="@mipmap/ic_matesinfo_two"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="@dimen/y30"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#fd0101"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请在该页面中添加前配偶信息；如有多次离异，请添加最近一次离异的前配偶信息。"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y19"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <LinearLayout
                    android:id="@+id/layout_select1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前配偶姓名："/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入前配偶姓名"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:id="@+id/layout_select2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离异时间："/>

                    <TextView
                        android:id="@+id/tv_leixing2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_weight="1"
                        android:hint="请选择离异时间"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_rock_right"/>
                </LinearLayout>

                <View style="@style/line_hor"/>
                <LinearLayout
                    android:id="@+id/layout_select5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户籍所在地："/>

                    <TextView
                        android:id="@+id/tv_hjszd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_weight="1"
                        android:hint="请选择户籍所在地"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_rock_right"/>
                </LinearLayout>

                <View style="@style/line_hor"/>
                <LinearLayout
                    android:id="@+id/layout_select3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前配偶身份证号码："/>

                    <EditText
                        android:id="@+id/tv_idcard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入前配偶身份证号码"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:id="@+id/layout_select4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前配偶手机号码："/>

                    <EditText
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:hint="请输入前配偶手机号码"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View style="@style/line_hor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_upload1"
                            android:layout_width="@dimen/x297"
                            android:layout_height="@dimen/y188"
                            android:layout_marginBottom="@dimen/y45"
                            android:layout_marginTop="@dimen/y45"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_img5"
                            />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/y40"
                            android:layout_marginLeft="@dimen/x277"
                            android:layout_marginTop="@dimen/y25"
                            android:src="@mipmap/ic_delete"
                            android:visibility="invisible"/>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"

        android:paddingBottom="@dimen/y20"
        android:paddingTop="@dimen/y20">

        <Button
            android:id="@+id/btn_login"
            style="@style/btn_login"
            android:layout_below="@+id/layout"

            android:text="确认无误，下一步"/>
    </LinearLayout>
</RelativeLayout>