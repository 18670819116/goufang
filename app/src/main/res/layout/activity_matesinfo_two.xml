<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y40"
                    android:src="@mipmap/ic_mates2"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3"
                    android:layout_marginBottom="@dimen/y24"
                    android:layout_marginLeft="@dimen/x54"
                    android:layout_marginRight="@dimen/x54"
                    android:layout_marginTop="@dimen/y45"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_below="@+id/imageView"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#fd0101"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请核对身份证正面信息，如有误可直接修改内容"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名："/>

                    <EditText
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"

                        android:background="@null"
                        android:singleLine="true"
                        android:text="某某某"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别："/>

                    <EditText
                        android:id="@+id/tv_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:text="男"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x100"
                        android:text="民族："/>

                    <EditText
                        android:id="@+id/tv_ethnic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        android:text="汉"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出生："/>

                    <EditText
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        android:text="1976年06月06日"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住址："/>

                    <EditText
                        android:id="@+id/tv_adress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="湖南省长沙市"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View style="@style/line_hor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y94"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号码："/>

                    <EditText
                        android:id="@+id/tv_idcard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        android:text="430121199308047031"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y20"
        android:paddingTop="@dimen/y20">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/btn_back"
            android:gravity="center"
            android:text="上一步"

            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x19"
            android:background="@mipmap/btn_next"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>